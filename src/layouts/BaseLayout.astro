---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  schemaType?: 'Article' | 'BlogPosting' | 'WebPage' | 'CollectionPage';
  publishedDate?: string;
  modifiedDate?: string;
  noindex?: boolean;
  author?: string;
}

const {
  title,
  description = 'PetCare.Software - The complete pet care management platform for dog daycare, boarding, kennels, and catteries. Streamline bookings, billing, and operations.',
  image = '/images/og-default.jpg',
  type = 'website',
  schemaType,
  publishedDate,
  modifiedDate,
  noindex = false,
  author = 'John Powell'
} = Astro.props;

// Determine the schema type to use
const resolvedSchemaType = schemaType || (type === 'article' ? 'Article' : 'WebPage');

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Dynamic title suffix: skip for long titles, use shorter brand name
const getTitleSuffix = (pageTitle: string): string => {
  if (pageTitle === 'Home') return 'PetCare.Software - Pet Boarding & Daycare Management';
  if (pageTitle.length > 50) return pageTitle; // No suffix for long titles
  return `${pageTitle} | PetCare`;
};
const fullTitle = getTitleSuffix(title);

// Build full image URL for schema
const fullImageUrl = image ? new URL(image, Astro.site).href : null;

const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://petcare.software/#organization",
      "name": "PetCare.Software",
      "url": "https://petcare.software",
      "logo": {
        "@type": "ImageObject",
        "url": "https://petcare.software/logo.svg"
      },
      "sameAs": [
        "https://twitter.com/petcaresoftware",
        "https://www.linkedin.com/company/petcare-software",
        "https://www.facebook.com/petcaresoftware"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "Customer Support",
        "email": "support@petcare.software",
        "url": "https://petcare.software/contact/"
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "124 City Road",
        "addressLocality": "London",
        "postalCode": "EC1V 2NX",
        "addressCountry": "GB"
      },
      "foundingDate": "2024",
      "description": "Complete pet care management software for dog daycare, boarding kennels, catteries, and grooming salons. Automate bookings, billing, and operations."
    },
    {
      "@type": "WebSite",
      "@id": "https://petcare.software/#website",
      "url": "https://petcare.software",
      "name": "PetCare.Software",
      "publisher": {
        "@id": "https://petcare.software/#organization"
      }
    },
    {
      "@type": resolvedSchemaType,
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://petcare.software/#website"
      },
      ...(publishedDate && { "datePublished": publishedDate }),
      ...(modifiedDate && { "dateModified": modifiedDate }),
      ...(fullImageUrl && (resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "image": {
          "@type": "ImageObject",
          "url": fullImageUrl
        }
      }),
      ...((resolvedSchemaType === 'Article' || resolvedSchemaType === 'BlogPosting') && {
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://petcare.software/about/"
        },
        "publisher": {
          "@id": "https://petcare.software/#organization"
        }
      })
    }
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- Performance optimizations -->
  <meta http-equiv="x-dns-prefetch-control" content="on" />
  <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
  <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
  <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
  
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  
  <link rel="canonical" href={canonicalURL} />
  
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, Astro.site)} />
  <meta property="og:site_name" content="PetCare.Software" />
  
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={fullTitle} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={new URL(image, Astro.site)} />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
  <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" /></noscript>
  
  <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />

  <!-- Google Analytics - Conditional Loading Based on Cookie Consent -->
  <script is:inline>
    (function() {
      // Check if user has accepted cookies
      try {
        const consent = localStorage.getItem('cookieConsent');
        if (consent) {
          const consentData = JSON.parse(consent);
          if (consentData.accepted === true) {
            // Load Google Analytics
            const script = document.createElement('script');
            script.async = true;
            script.src = 'https://www.googletagmanager.com/gtag/js?id=G-P4JXBH0KX7';
            document.head.appendChild(script);

            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-P4JXBH0KX7');
          }
        }
      } catch (error) {
        console.error('Error loading analytics:', error);
      }
    })();
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <Navigation />
  
  <main class="flex-grow pt-16 md:pt-20">
    <slot />
  </main>
  
  <Footer />
  <CookieConsent />
</body>
</html>
