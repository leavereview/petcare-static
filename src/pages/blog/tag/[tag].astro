---
// Tag Archive Page - /blog/tag/[tag]
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Collect all unique tags
  const tags = new Set<string>();
  posts.forEach(post => {
    post.data.tags?.forEach(tag => tags.add(tag));
  });

  // Create a path for each tag (hyphenate for clean URLs)
  return Array.from(tags).map(tag => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: { tag },
  }));
}

interface Props {
  tag: string;
}

const { tag } = Astro.props;

// Get all posts with this tag
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(post => post.data.tags?.includes(tag))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Format tag for display (capitalize first letter of each word)
const displayTag = tag.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');

// Generate dynamic description based on post count
const postCount = posts.length;
const description = postCount === 1
  ? `Read our article about ${tag.toLowerCase()} for pet care businesses. Expert tips and guides from PetCare.Software.`
  : `Explore ${postCount} articles about ${tag.toLowerCase()} for pet care businesses. Expert tips, guides, and best practices.`;

// noindex sparse tags (fewer than 3 posts) to avoid thin content penalties
const shouldNoindex = posts.length < 3;

// Tag topic intro content map
const tagIntros: Record<string, string> = {
  'Kennel': 'Expert guidance on running efficient kennel operations, from facility design to capacity planning and customer service best practices.',
  'Dog Daycare': 'Insights and strategies for successful dog daycare businesses, including playgroup management, safety protocols, and client communication.',
  'Dog Boarding': 'Tips for overnight boarding facilities covering room management, feeding schedules, and creating comfortable stays for pets.',
  'Cattery': 'Specialized content for cat boarding businesses, including feline-specific care requirements, enclosure setup, and stress reduction techniques.',
  'Grooming': 'Resources for grooming salons and mobile groomers, from techniques and tools to client retention and service pricing.',
  'Pet Sitting': 'Guides for pet sitters and dog walkers on building a successful business, from client management to GPS tracking and invoicing.',
  'Starting a Business': 'Step-by-step guides for launching your pet care business, from business plans to licensing and initial setup.',
  'Business Operations': 'Operational best practices for pet care facilities, including playgroup management, scheduling, and daily workflows.',
  'Marketing': 'Marketing strategies to grow your pet care business, from social media and local SEO to referral programs and promotions.',
  'Finance': 'Financial management for pet care businesses, including pricing strategies, cost control, and cash flow management.',
  'Software': 'Guides to choosing and using pet care management software, from feature comparisons to ROI analysis.',
  'Safety': 'Health and safety protocols for pet care facilities, including vaccination tracking, emergency preparedness, and disease prevention.',
  'Legal': 'Legal requirements and insurance essentials for pet boarding, daycare, and kennel businesses.',
  'Staff Training': 'Training and certification resources for pet care staff, from essential skills to ongoing professional development.',
  'Industry Trends': 'Stay ahead with insights on pet care industry developments, emerging technologies, and market opportunities.',
};

const introText = tagIntros[tag] || `Browse our collection of articles about ${tag.toLowerCase()}. Find practical tips and expert insights to help grow your pet care business.`;
---

<BaseLayout
  title={`${displayTag} - Pet Care Articles & Guides`}
  description={description}
  noindex={shouldNoindex}
  schemaType="WebPage"
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-100 py-3">
    <div class="container-custom">
      <Breadcrumbs items={[
        { label: 'Home', href: '/' },
        { label: 'Blog', href: '/blog/' },
        { label: `Tag: ${displayTag}` }
      ]} />
    </div>
  </div>

  <section class="bg-gradient-to-br from-brand-navy to-gray-900 text-white py-16">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h1 class="text-3xl md:text-5xl font-bold mb-4">
          {displayTag}
        </h1>
        <p class="text-xl text-gray-300 mb-4">
          {postCount} article{postCount !== 1 ? 's' : ''} tagged with "{tag}"
        </p>
        <p class="text-gray-400">
          {introText}
        </p>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="card group">
            <a href={`/blog/${post.slug}/`} class="block">
              {post.data.image && (
                <div class="aspect-video overflow-hidden rounded-lg mb-4 -mx-6 -mt-6">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags?.slice(0, 3).map(t => (
                  <span class={`badge ${t === tag ? 'badge-primary' : 'bg-gray-100 text-gray-600'}`}>
                    {t}
                  </span>
                ))}
              </div>
              <h2 class="text-lg font-bold text-brand-navy group-hover:text-brand-red transition-colors mb-2">
                {post.data.title}
              </h2>
              <p class="text-gray-600 text-sm line-clamp-2 mb-3">
                {post.data.description}
              </p>
              <div class="text-sm text-gray-400">
                <time datetime={post.data.date}>
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500">No articles found for this tag.</p>
          <a href="/blog/" class="text-brand-red hover:underline mt-4 inline-block">
            ‚Üê Browse all articles
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Related Tags Section -->
  <section class="section bg-gray-50">
    <div class="container-custom text-center">
      <h2 class="text-2xl font-bold text-brand-navy mb-6">Explore More Topics</h2>
      <a href="/blog/" class="btn-primary">
        View All Articles
      </a>
    </div>
  </section>
</BaseLayout>
