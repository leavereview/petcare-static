---
// Tag Archive Page - /blog/tag/[tag]
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Collect all unique tags
  const tags = new Set<string>();
  posts.forEach(post => {
    post.data.tags?.forEach(tag => tags.add(tag));
  });

  // Create a path for each tag (hyphenate for clean URLs)
  return Array.from(tags).map(tag => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: { tag },
  }));
}

interface Props {
  tag: string;
}

const { tag } = Astro.props;

// Get all posts with this tag
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(post => post.data.tags?.includes(tag))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Format tag for display
const displayTag = tag.charAt(0).toUpperCase() + tag.slice(1);
---

<BaseLayout
  title={`${displayTag} Articles`}
  description={`Browse all articles about ${tag} on PetCare.Software. Tips, guides, and best practices for pet care businesses.`}
>
  <!-- Breadcrumbs -->
  <div class="bg-gray-100 py-3">
    <div class="container-custom">
      <Breadcrumbs items={[
        { label: 'Home', href: '/' },
        { label: 'Blog', href: '/blog/' },
        { label: `Tag: ${displayTag}` }
      ]} />
    </div>
  </div>

  <section class="bg-gradient-to-br from-brand-navy to-gray-900 text-white py-16">
    <div class="container-custom">
      <div class="max-w-4xl">
        <h1 class="text-3xl md:text-5xl font-bold mb-4">
          {displayTag}
        </h1>
        <p class="text-xl text-gray-300">
          {posts.length} article{posts.length !== 1 ? 's' : ''} tagged with "{tag}"
        </p>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="card group">
            <a href={`/blog/${post.slug}/`} class="block">
              {post.data.image && (
                <div class="aspect-video overflow-hidden rounded-lg mb-4 -mx-6 -mt-6">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags?.slice(0, 3).map(t => (
                  <span class={`badge ${t === tag ? 'badge-primary' : 'bg-gray-100 text-gray-600'}`}>
                    {t}
                  </span>
                ))}
              </div>
              <h2 class="text-lg font-bold text-brand-navy group-hover:text-brand-red transition-colors mb-2">
                {post.data.title}
              </h2>
              <p class="text-gray-600 text-sm line-clamp-2 mb-3">
                {post.data.description}
              </p>
              <div class="text-sm text-gray-400">
                <time datetime={post.data.date}>
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
