  { label: 'Pet Grooming Software' }
];

// Pet grooming industry statistics
const groomingStats = [
  {
    label: 'UK Pet Grooming Salons',
    value: '4,200+',
    change: { value: 15, direction: 'up' as const, period: 'since 2021' },
    context: 'Including mobile groomers'
  },
  {
    label: 'Average Salon Size',
    value: '3 groomers',
    context: 'Typical UK grooming business'
  },
  {
    label: 'No-Show Reduction',
    value: '70%',
    context: 'With automated reminders and deposits'
  },
  {
    label: 'Admin Time Saved',
    value: '15+ hrs/week',
