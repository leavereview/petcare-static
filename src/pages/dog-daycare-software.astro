<BaseLayout
  title="Dog Daycare Software Guide (2026)"
  description="Dog daycare software that saves 15+ hours per week. Online bookings, capacity management, report cards, and automated billing for daycare facilities. £79/mo flat pricing."
  image="/images/hero-pets.jpg"
>
  <!-- Breadcrumbs with Schema -->
  <div class="bg-gray-100 py-3">
    <div class="container-custom">
      <BreadcrumbsEnhanced items={breadcrumbs} site="petcare" />
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-brand-navy to-gray-900 text-white py-16">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('/images/hero-daycare.jpg'); background-size: cover; background-position: center;"></div>
    </div>
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <span class="inline-block bg-brand-red/20 text-brand-red-light px-3 py-1 rounded-full text-sm mb-4">Complete Guide 2026</span>
