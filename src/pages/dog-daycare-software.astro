          description="Key metrics showing the growth and digital transformation of the pet care industry"
          stats={petCareStats}
          layout="grid"
          source="UK Pet Care Industry Report 2026 & PFMA Data"
          datePublished="2026-01-01"
          site="petcare"
          pageUrl={Astro.url.href}
        />
      </div>
    </div>
  </section>

  <!-- Table of Contents -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
          <h2 class="text-xl font-bold text-brand-navy mb-4">In This Guide</h2>
          <ul class="grid md:grid-cols-2 gap-2 text-gray-700">
            <li><a href="#what-is" class="hover:text-brand-red">→ What Is Daycare Software?</a></li>
            <li><a href="#features" class="hover:text-brand-red">→ Must-Have Features</a></li>
            <li><a href="#comparison" class="hover:text-brand-red">→ Software Comparison</a></li>
            <li><a href="#benefits" class="hover:text-brand-red">→ Benefits for Your Facility</a></li>
            <li><a href="#choosing" class="hover:text-brand-red">→ Choosing the Right Solution</a></li>
            <li><a href="#faq" class="hover:text-brand-red">→ FAQ</a></li>
          </ul>
        </div>
      </div>
    </div>
